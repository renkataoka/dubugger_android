<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.renkataoka.dubugger">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_duck"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_duck"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".module.main.view.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.rubberduck.view.RubberDuckActivity"
            android:parentActivityName=".module.main.view.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".module.main.view.MainActivity" />
        </activity>
    </application>
</manifest>